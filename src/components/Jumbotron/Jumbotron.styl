.jumbotron
    display flex
    box-sizing border-box 
    width 100%  
    padding 7rem 15rem
    justify-content space-between
    background-color white

    &_direction_reverse
        flex-direction row-reverse

    &_theme_darkness
        background-color rgba(#edeff1, .35)

    &__info
        display flex
        flex-direction column
        justify-content space-between
        width 50%

    &__title
        font-size 3rem
        font-weight normal
        color #576671

    &__description
        font-size 1rem
        line-height 2rem
        color #87949e

    &__image
        width 30rem
        height 20rem